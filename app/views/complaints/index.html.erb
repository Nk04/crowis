<%= render "shared/header" %>
<div class='main'>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h1 class='title'>投稿一覧</h1>
    <%= link_to '新規投稿', "#", class: "subtitle" %>
    <ul class='item-lists'>

      <% @complaints.each do |complaints| %>
      <li class='list'>
        <%= link_to complaint_path(complaints.id) do %>
        <div class='item-info'> 
          <h3 class='item-name'>
            <%= complaints.title %>
          </h3>
          <div class='item-price'>
            <span><%= complaints.text %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div> 
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <%# //商品一覧 %>
</div>
<%= link_to  new_complaint_path do %>
  <div class='purchase-btn'>
    <span class='purchase-btn-text'>投稿する</span>
  </div>
<% end %>
<%= render "shared/footer" %>